generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PositionLevel {
  FACULTY
  DEPARTMENT
}

model Department {
  id              String                     @id @default(uuid())
  name            String                     @unique
  history         LeadershipHistory[]
  accomplishments DepartmentAccomplishment[]
}

model Session {
  id      String              @id @default(uuid())
  session String              @unique
  history LeadershipHistory[]
}

model LeadershipPosition {
  id       String              @id @default(uuid())
  position String              @unique
  history  LeadershipHistory[]
}

model LeadershipHistory {
  id           String             @id @default(uuid())
  studentName  String
  studentImage String
  department   Department         @relation(fields: [departmentId], references: [id])
  departmentId String
  session      Session            @relation(fields: [sessionId], references: [id])
  sessionId    String
  position     LeadershipPosition @relation(fields: [positionId], references: [id])
  positionId   String
  level        PositionLevel
}

model DepartmentAccomplishment {
  id           String     @id @default(uuid())
  sessionId    String
  description  String
  imageUrl     String
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId String
}

model FacultyAccomplishment {
  id          String @id @default(uuid())
  sessionId   String
  description String
  imageUrl    String
}
